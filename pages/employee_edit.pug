doctype html
head
  meta(charset='UTF-8')
  title=title 
  link(href='/css/bootstrap.css' rel='stylesheet')

include components/navbar.pug

form.mx-3(method="POST")
  .row.mx-3
    .form-group.col-md-6
      label(for='name') Name
      input#name.form-control(type='text' name="name" placeholder='First Name' required value=employee.name)
    .form-group.col-md-6
      label(for='surname') Surname
      input#surname.form-control(type='text' name="surname" placeholder='Surname' required value=employee.surname)
       
  .row.mx-3.mt-3
    .form-group.col-md-12
      label(for='seniority') Seniority
      //-input#seniority.form-control(type='text' name="seniority" placeholder='Employee Rank' min="0" required)
      select#seniority.form-control(name="seniority" required)
        each seniority of seniorities 
          if employee.seniority == seniority.id
            option(value=seniority.id selected) #{seniority.seniority}
          else 
            option(value=seniority.id) #{seniority.seniority}
  button.btn.btn-primary.m-3(type='submit') Update

script(src='/js/bootstrap.bundle.min.js' type='module')
